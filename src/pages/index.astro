---
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import BlogCard from '../components/BlogCard.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE, SOCIAL_LINKS } from '../consts';
import { Icon } from 'astro-icon/components';

const posts = (await getCollection('blog'))
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
	.slice(0, 6);

// Assign bento sizes: first = large, second = tall, rest = small
const bentoSizes = ['large', 'tall', 'small', 'small', 'medium', 'small'];
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main class="home-main">
			<!-- Hero + Posts split -->
			<section class="hero-split">
				<div class="hero-content">
					<div class="prompt">
						<span class="user">halovessel</span><span class="at">@</span><span class="host">lokesh</span><span class="colon">:</span><span class="path">~</span><span class="dollar"> $</span>
					</div>
					<h1 class="hero-cmd">
						build <span class="flag">--with</span> <span class="str">"passion"</span><span class="cursor"></span>
					</h1>
					<p class="hero-output">
						I'm Lokesh Shelva, developer and builder. Exploring code, shipping projects, and writing about the process. Everything starts at the terminal.
					</p>
					<div class="hero-links">
						<a href="/blog/" class="link-cmd link-primary">cat blog.md</a>
						<a href="/about/" class="link-cmd link-ghost">whoami</a>
					</div>
					<div class="hero-social">
						{SOCIAL_LINKS.map(link => (
							<a href={link.url} target={link.url.startsWith('mailto:') ? undefined : '_blank'} rel={link.url.startsWith('mailto:') ? undefined : 'noopener noreferrer'} class="hero-social-icon" aria-label={link.label} title={link.label}>
								<Icon name={link.icon} size="20" />
							</a>
						))}
					</div>
				</div>

				<!-- Terminal divider -->
				<div class="section-divider">
					<span class="divider-prompt">$</span>
					<span class="divider-cmd">ls blogs/</span>
					<span class="divider-line"></span>
				</div>

				<!-- Posts peek: partially visible to invite scrolling -->
				<div class="posts-peek">
					{posts.length > 0 ? (
						<>
							<div class="bento-grid">
								{posts.map((post, i) => (
									<BlogCard
										title={post.data.title}
										description={post.data.description}
										date={post.data.pubDate}
										tags={post.data.tags}
										slug={post.id}
										size={bentoSizes[i] || 'small'}
									/>
								))}
							</div>
							<a href="/blog/" class="view-all">
								<span>View all posts</span>
								<span class="arrow">→</span>
							</a>
						</>
					) : (
						<div class="empty-state">
							<span class="empty-prompt">$ ls blogs/</span>
							<p class="empty-text">ls: cannot access 'blogs/': No such file or directory</p>
						</div>
					)}
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	.home-main {
		max-width: var(--max-width);
		margin: 0 auto;
		padding: 0 2rem;
		min-height: calc(100vh - var(--header-height) - 100px);
	}

	.hero-split {
		min-height: calc(100vh - var(--header-height));
		display: flex;
		flex-direction: column;
	}

	/* Hero takes ~60% of viewport */
	.hero-content {
		min-height: 60vh;
		display: flex;
		flex-direction: column;
		justify-content: center;
		padding: 3rem 0 2rem;
		position: relative;
	}

	/* Dot grid pattern */
	.hero-content::before {
		content: '';
		position: absolute;
		inset: 0;
		background-image: radial-gradient(circle, var(--fg-dim) 0.5px, transparent 0.5px);
		background-size: 24px 24px;
		opacity: 0.15;
		pointer-events: none;
		-webkit-mask-image: linear-gradient(to bottom, transparent, rgba(0,0,0,0.5) 30%, rgba(0,0,0,0.5) 70%, transparent);
		mask-image: linear-gradient(to bottom, transparent, rgba(0,0,0,0.5) 30%, rgba(0,0,0,0.5) 70%, transparent);
	}

	/* Subtle purple glow */
	.hero-content::after {
		content: '';
		position: absolute;
		top: 30%;
		left: -10%;
		width: 60%;
		height: 50%;
		background: radial-gradient(ellipse, rgba(199, 160, 255, 0.06) 0%, transparent 70%);
		pointer-events: none;
		z-index: -1;
	}

	.prompt {
		font-family: var(--mono);
		font-size: 0.8rem;
		color: var(--fg-muted);
		margin-bottom: 0.5rem;
	}
	.prompt .user { color: var(--purple); }
	.prompt .at { color: var(--fg-dim); }
	.prompt .host { color: var(--fg-muted); }
	.prompt .colon, .prompt .path { color: var(--fg-dim); }
	.prompt .dollar { color: var(--fg-dim); }

	.hero-cmd {
		font-family: var(--mono);
		font-size: clamp(1.8rem, 5vw, 3rem);
		font-weight: 700;
		color: var(--fg);
		line-height: 1.3;
		margin-bottom: 1rem;
	}
	.hero-cmd .flag { color: var(--fg); }
	.hero-cmd .str { color: var(--fg-muted); }

	.hero-output {
		color: var(--fg-muted);
		font-size: 1rem;
		margin-bottom: 2.5rem;
		max-width: 550px;
		line-height: 1.8;
	}

	.hero-links { display: flex; gap: 1rem; }

	.hero-social {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		margin-top: 1.5rem;
	}

	.hero-social-icon {
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 0.35rem;
		color: var(--fg-dim);
		text-decoration: none;
		transition: color var(--transition);
	}

	.hero-social-icon:hover {
		color: var(--fg-muted);
	}

	.link-cmd {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		padding: 0.6rem 1.25rem;
		font-family: var(--mono);
		font-size: 0.8rem;
		text-decoration: none;
		border-radius: var(--radius);
		transition: all var(--transition), transform 200ms ease;
	}
	.link-primary {
		background: rgba(199, 160, 255, 0.08);
		color: var(--purple);
		border: 1px solid rgba(199, 160, 255, 0.2);
	}
	.link-primary:hover {
		background: rgba(199, 160, 255, 0.18);
		border-color: rgba(199, 160, 255, 0.4);
		transform: translateY(-2px);
	}
	.link-ghost {
		color: var(--fg-muted);
		border: 1px solid var(--border);
	}
	.link-ghost:hover { border-color: var(--fg-dim); color: var(--fg); transform: translateY(-2px); }

	/* Posts peek — deliberately extends beyond viewport fold */
	.posts-peek {
		padding: 1rem 0 3rem;
	}

	/* Terminal divider */
	.section-divider {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		padding: 1.5rem 0;
		font-family: var(--mono);
		font-size: 0.75rem;
	}

	.divider-prompt {
		color: var(--fg-dim);
	}

	.divider-cmd {
		color: var(--fg-muted);
		white-space: nowrap;
	}

	.divider-line {
		flex: 1;
		height: 1px;
		background: var(--border);
	}

	.sec-head {
		font-family: var(--mono);
		font-size: 0.75rem;
		color: var(--fg-muted);
		margin-bottom: 1.5rem;
	}

	/* Bento grid */
	.bento-grid {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 0.75rem;
	}

	.view-all {
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 0.5rem;
		margin-top: 2rem;
		font-family: var(--mono);
		font-size: 0.8rem;
		color: var(--fg-muted);
		text-decoration: none;
		transition: color var(--transition);
	}

	.view-all:hover {
		color: var(--fg);
	}

	.view-all .arrow {
		transition: transform var(--transition);
	}

	.view-all:hover .arrow {
		transform: translateX(3px);
	}

	.empty-state {
		padding: 2rem;
		background: rgba(0, 0, 0, 0.2);
		border-left: 2px solid var(--fg-dim);
		border-radius: 2px;
	}

	.empty-prompt {
		display: block;
		font-family: var(--mono);
		font-size: 0.8rem;
		color: var(--fg-dim);
		margin-bottom: 0.5rem;
	}

	.empty-text {
		font-family: var(--mono);
		font-size: 0.8rem;
		color: var(--fg-dim);
		margin: 0;
		opacity: 0.8;
	}

	@media (max-width: 768px) {
		.bento-grid {
			grid-template-columns: repeat(2, 1fr);
		}
	}

	@media (max-width: 640px) {
		.home-main { padding: 0 1rem; }
		.hero-content { min-height: 55vh; padding: 2rem 0; }
		.hero-links { flex-direction: column; }
		.bento-grid {
			grid-template-columns: 1fr;
		}
	}
</style>
