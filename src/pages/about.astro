---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_TITLE, SOCIAL_LINKS } from '../consts';
import { Icon } from 'astro-icon/components';
import { experiences } from '../data/experience';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`About - ${SITE_TITLE}`} description="About halovessel." />
	</head>
	<body>
		<Header />
		<main>
			<nav class="breadcrumb">
				<a href="/">~</a>
				<span class="sep">/</span>
				<span>about</span>
			</nav>

			<section class="about">
				<h1 class="about-name">Lokesh Shelva</h1>
				<p class="about-handle">@halovessel</p>

				<div class="about-body">
					<p>Developer and builder, exploring the intersection of software and creativity. I build tools, ship projects, and write about the journey.</p>
					<p>This site is my corner of the internet â€” a place for blog posts, project showcases, and whatever else I'm working on.</p>
				</div>

				<div class="about-links">
					{SOCIAL_LINKS.map(link => (
						<a href={link.url} target={link.url.startsWith('mailto:') ? undefined : '_blank'} rel={link.url.startsWith('mailto:') ? undefined : 'noopener noreferrer'} class="social-link">
							<Icon name={link.icon} size="18" />
							{link.label}
						</a>
					))}
				</div>
			</section>

			<section class="history-section">
				<div class="section-header">
					<span class="prompt">$</span>
					<span class="command">history</span>
				</div>

				<div class="history-list">
					{experiences.map((exp, index) => (
						<div class="history-entry">
							<div class="history-header">
								<span class="history-number">{String(index + 1).padStart(3, ' ')}</span>
								<span class="history-command">{exp.command || `cd ~/experience/${exp.company.toLowerCase().replace(/\s+/g, '-')}`}</span>
							</div>
							<div class="history-output">
								<div class="exp-role">{exp.role}</div>
								<div class="exp-company">{exp.company} <span class="exp-period">({exp.period})</span></div>
								<div class="exp-description">{exp.description}</div>
							</div>
						</div>
					))}
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	.about {
		width: 100%;
	}

	.about-name {
		font-family: var(--mono);
		font-size: 1.5rem;
		font-weight: 700;
		color: var(--fg);
		margin-bottom: 0.25rem;
	}

	.about-handle {
		font-family: var(--mono);
		font-size: 0.8rem;
		color: var(--purple);
		margin-bottom: 2rem;
	}

	.about-body {
		margin-bottom: 2rem;
	}

	.about-body p {
		font-size: 0.9rem;
		line-height: 1.8;
		color: var(--fg-muted);
	}

	.about-links {
		display: flex;
		gap: 0.75rem;
		flex-wrap: wrap;
	}

	.social-link {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		font-family: var(--mono);
		font-size: 0.8rem;
		color: var(--fg-muted);
		padding: 0.5rem 1rem;
		background: var(--bg-card);
		border: 1px solid var(--border);
		border-radius: var(--radius);
		text-decoration: none;
		transition: border-color var(--transition), color var(--transition);
	}

	.social-link:hover {
		border-color: var(--fg-dim);
		color: var(--fg);
	}

	/* History Section */
	.history-section {
		margin-top: 4rem;
		width: 100%;
	}

	.section-header {
		font-family: var(--mono);
		font-size: 0.85rem;
		color: var(--fg-muted);
		margin-bottom: 1.5rem;
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}

	.section-header .prompt {
		color: var(--fg-dim);
	}

	.section-header .command {
		color: var(--fg-muted);
	}

	.history-list {
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
	}

	.history-entry {
		padding: 1rem;
		background: rgba(0, 0, 0, 0.2);
		border-left: 2px solid var(--fg-dim);
		border-radius: 2px;
		transition: border-color var(--transition);
	}

	.history-entry:hover {
		border-left-color: var(--purple);
	}

	.history-header {
		font-family: var(--mono);
		font-size: 0.75rem;
		color: var(--fg-dim);
		margin-bottom: 0.75rem;
		display: flex;
		align-items: center;
		gap: 0.75rem;
	}

	.history-number {
		color: var(--fg-dim);
		opacity: 0.6;
	}

	.history-command {
		color: var(--fg-muted);
	}

	.history-output {
		padding-left: 0.5rem;
	}

	.exp-role {
		font-size: 1rem;
		font-weight: 600;
		color: var(--fg);
		margin-bottom: 0.25rem;
	}

	.exp-company {
		font-family: var(--mono);
		font-size: 0.8rem;
		color: var(--purple);
		margin-bottom: 0.5rem;
	}

	.exp-period {
		color: var(--fg-dim);
		font-size: 0.75rem;
	}

	.exp-description {
		font-size: 0.85rem;
		color: var(--fg-muted);
		line-height: 1.6;
	}

	@media (max-width: 640px) {
		.history-header {
			flex-direction: column;
			align-items: flex-start;
			gap: 0.25rem;
		}
	}
</style>
