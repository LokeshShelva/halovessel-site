---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { SITE_TITLE, SOCIAL_LINKS } from "../consts";
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
import profilePic from "../assets/profile.jpeg";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`About - ${SITE_TITLE}`} description="About halovessel." />
  </head>
  <body>
    <Header />
    <main>
      <nav class="breadcrumb">
        <a href="/">~</a>
        <span class="sep">/</span>
        <span>about</span>
      </nav>

      <section class="about">
        <div class="profile">
          <Image src={profilePic} alt="Profile Picture" class="profile-pic" />
        </div>
        <div class="content">
          <h1 class="about-name">Lokesh Shelva</h1>
          <p class="about-handle">@halovessel</p>
          <p class="about-location">
            <Icon name="lucide:map-pin" size="14" />
            Bangalore, India
          </p>

          <div class="about-body">
            <p>
              Developer and builder, exploring the intersection of software and
              creativity. I build tools, ship projects, and write about the
              journey.
            </p>
            <p>
              This site is my corner of the internet â€” a place for blog posts,
              project showcases, and whatever else I'm working on.
            </p>
          </div>

          <a href="/lokesh-resume.pdf" download class="cv-button">
            <Icon name="lucide:download" size="18" />
            Download CV
          </a>

          <div class="about-links">
            {
              SOCIAL_LINKS.map((link) => (
                <a
                  href={link.url}
                  target={link.url.startsWith("mailto:") ? undefined : "_blank"}
                  rel={
                    link.url.startsWith("mailto:")
                      ? undefined
                      : "noopener noreferrer"
                  }
                  class="social-link"
                  title={link.label}
                >
                  <Icon name={link.icon} size="20" />
                </a>
              ))
            }
          </div>
        </div>

          
      </section>
    </main>
    <Footer />
  </body>
</html>

<style>
  .about {
    width: 100%;
    display: flex;
    align-items: flex-start;
    gap: 2rem;
  }

  .profile {
    width: 150px;
    min-width: 150px;
    aspect-ratio: 1 / 1;
    border-radius: var(--radius);
    overflow: hidden;
  }

  .profile-pic {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center 8%; /* adjust vertical offset to center face */
    display: block;
  }

  .content {
    flex: 1;
  }

  .about-name {
    font-family: var(--mono);
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--fg);
    margin-bottom: 0.25rem;
  }

  .about-handle {
    font-family: var(--mono);
    font-size: 0.8rem;
    color: var(--purple);
    margin-bottom: 0.5rem;
  }

  .about-location {
    display: flex;
    align-items: center;
    gap: 0.35rem;
    font-family: var(--mono);
    font-size: 0.75rem;
    color: var(--fg-dim);
    margin-bottom: 1rem;
  }

  .about-body {
    margin-bottom: 2rem;
  }

  .about-body p {
    font-size: 0.9rem;
    line-height: 1.8;
    color: var(--fg-muted);
  }

  .about-links {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .social-link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    color: var(--fg-muted);
    padding: 0.6rem;
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: var(--radius);
    text-decoration: none;
    transition:
      border-color var(--transition),
      color var(--transition);
  }

  .social-link:hover {
    border-color: var(--fg-dim);
    color: var(--fg);
  }

  .cv-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-family: var(--mono);
    font-size: 0.85rem;
    color: var(--bg);
    background: var(--purple);
    padding: 0.75rem 1.5rem;
    border-radius: var(--radius);
    text-decoration: none;
    margin-bottom: 1rem;
    transition: opacity var(--transition);
  }

  .cv-button:hover {
    opacity: 0.9;
  }

  @media (max-width: 640px) {
    .about {
      flex-direction: column;
      align-items: center;
      text-align: center;
    }

    .profile {
      width: 120px;
      min-width: 120px;
    }

    .about-links {
      justify-content: center;
    }

    .cv-button {
      margin-left: auto;
      margin-right: auto;
    }
  }
</style>
