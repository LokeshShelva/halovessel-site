---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_TITLE, SOCIAL_LINKS } from '../consts';
import { Icon } from 'astro-icon/components';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`About - ${SITE_TITLE}`} description="About halovessel." />
	</head>
	<body>
		<Header />
		<main>
			<nav class="breadcrumb">
				<a href="/">~</a>
				<span class="sep">/</span>
				<span>about</span>
			</nav>

			<section class="about">
				<h1 class="about-name">Lokesh Shelva</h1>
				<p class="about-handle">@halovessel</p>

				<div class="about-body">
					<p>Developer and builder, exploring the intersection of software and creativity. I build tools, ship projects, and write about the journey.</p>
					<p>This site is my corner of the internet â€” a place for blog posts, project showcases, and whatever else I'm working on.</p>
				</div>

				<div class="about-links">
					{SOCIAL_LINKS.map(link => (
						<a href={link.url} target={link.url.startsWith('mailto:') ? undefined : '_blank'} rel={link.url.startsWith('mailto:') ? undefined : 'noopener noreferrer'} class="social-link">
							<Icon name={link.icon} size="18" />
							{link.label}
						</a>
					))}
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	.about {
		max-width: 520px;
	}

	.about-name {
		font-family: var(--mono);
		font-size: 1.5rem;
		font-weight: 700;
		color: var(--fg);
		margin-bottom: 0.25rem;
	}

	.about-handle {
		font-family: var(--mono);
		font-size: 0.8rem;
		color: var(--purple);
		margin-bottom: 2rem;
	}

	.about-body {
		margin-bottom: 2rem;
	}

	.about-body p {
		font-size: 0.9rem;
		line-height: 1.8;
		color: var(--fg-muted);
	}

	.about-links {
		display: flex;
		gap: 0.75rem;
		flex-wrap: wrap;
	}

	.social-link {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		font-family: var(--mono);
		font-size: 0.8rem;
		color: var(--fg-muted);
		padding: 0.5rem 1rem;
		background: var(--bg-card);
		border: 1px solid var(--border);
		border-radius: var(--radius);
		text-decoration: none;
		transition: border-color var(--transition), color var(--transition);
	}

	.social-link:hover {
		border-color: var(--fg-dim);
		color: var(--fg);
	}
</style>
