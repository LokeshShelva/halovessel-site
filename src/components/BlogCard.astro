---
interface Props {
	title: string;
	description: string;
	date: Date;
	tags?: string[];
	slug: string;
	size?: string;
}

const { title, description, date, tags = [], slug, size = 'small' } = Astro.props;

const formattedDate = date.toLocaleDateString('en-US', {
	year: 'numeric',
	month: 'short',
	day: 'numeric',
});

const sizeClass = `bento-${size}`;
---

<a href={`/halovessel-site/blog/${slug}/`} class:list={["blog-card", sizeClass]}>
	<div class="card-inner">
		<div class="card-top">
			<div class="card-tags">
				{tags.map(tag => (
					<span class="tag">{tag}</span>
				))}
			</div>
		</div>
		<h3 class="card-title">{title}</h3>
		<p class="card-desc">{description}</p>
		<div class="card-meta">
			<time datetime={date.toISOString()}>{formattedDate}</time>
		</div>
	</div>
</a>

<style>
	.blog-card {
		display: block;
		padding: 1.5rem;
		background: var(--bg-card);
		border: 1px solid var(--border);
		border-radius: var(--radius);
		text-decoration: none;
		color: inherit;
		transition: border-color var(--transition), background var(--transition), transform 200ms ease;
	}

	.blog-card:hover {
		border-color: rgba(255, 255, 255, 0.15);
		background: var(--card-hover-bg);
		transform: translateY(-2px);
	}

	.card-inner {
		display: flex;
		flex-direction: column;
		height: 100%;
	}

	/* Bento sizes */
	.bento-large {
		grid-column: span 2;
	}

	.bento-large .card-title {
		font-size: 1.35rem;
	}

	.bento-large .card-desc {
		-webkit-line-clamp: 4;
	}

	.bento-tall {
		grid-row: span 2;
	}

	.bento-tall .card-inner {
		justify-content: space-between;
	}

	.bento-tall .card-desc {
		-webkit-line-clamp: 6;
	}

	.bento-medium {
		grid-column: span 2;
	}

	.bento-small {
		/* default 1x1 */
	}

	.card-top {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		margin-bottom: 0.75rem;
	}

	.card-tags {
		display: flex;
		gap: 0.4rem;
		flex-wrap: wrap;
	}

	.card-title {
		font-size: 1rem;
		font-weight: 600;
		color: var(--fg);
		margin: 0 0 0.5rem 0;
		line-height: 1.4;
		transition: color var(--transition);
	}

	.blog-card:hover .card-title {
		color: var(--fg);
	}

	.card-desc {
		font-size: 0.8rem;
		color: var(--fg-muted);
		margin: 0;
		line-height: 1.7;
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
		overflow: hidden;
		flex: 1;
	}

	.card-meta {
		margin-top: 1rem;
		font-family: var(--mono);
		font-size: 0.7rem;
		color: var(--fg-dim);
	}

	@media (max-width: 768px) {
		.bento-large,
		.bento-medium {
			grid-column: span 2;
		}
	}

	@media (max-width: 640px) {
		.bento-large,
		.bento-tall,
		.bento-medium {
			grid-column: span 1;
			grid-row: span 1;
		}
	}
</style>
