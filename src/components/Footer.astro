---
import { SOCIAL_LINKS } from '../consts';
import { Icon } from 'astro-icon/components';
const today = new Date();
---

<footer>
	<div class="footer-content">
		<div class="footer-social">
			{SOCIAL_LINKS.map(link => (
				<a href={link.url} target={link.url.startsWith('mailto:') ? undefined : '_blank'} rel={link.url.startsWith('mailto:') ? undefined : 'noopener noreferrer'} class="social-icon" aria-label={link.label} title={link.label}>
					<Icon name={link.icon} />
				</a>
			))}
		</div>
		<div class="footer-links">
			<a href="/halovessel-site/blog/">blog</a>
			<span class="dot">·</span>
			<a href="/halovessel-site/projects/">projects</a>
			<span class="dot">·</span>
			<a href="/halovessel-site/about/">about</a>
		</div>
		<p class="copyright">&copy; {today.getFullYear()} Lokesh</p>
	</div>
</footer>

<style>
	footer {
		border-top: 1px solid var(--border);
		padding: 2rem 2rem;
	}

	.footer-content {
		max-width: var(--max-width);
		margin: 0 auto;
		text-align: center;
	}

	.footer-social {
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 0.75rem;
		margin-bottom: 1.25rem;
	}

	.social-icon {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 36px;
		height: 36px;
		border-radius: var(--radius);
		color: var(--fg-dim);
		border: 1px solid var(--border);
		text-decoration: none;
		transition: color var(--transition), border-color var(--transition);
	}

	.social-icon:hover {
		color: var(--fg);
		border-color: var(--fg-dim);
	}

	.footer-links {
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 0.75rem;
		margin-bottom: 0.75rem;
	}

	.footer-links a {
		font-family: var(--mono);
		font-size: 0.75rem;
		color: var(--fg-muted);
		text-decoration: none;
		transition: color var(--transition);
	}

	.footer-links a:hover {
		color: var(--fg);
	}

	.dot {
		color: var(--fg-dim);
		font-size: 0.7rem;
	}

	.copyright {
		font-family: var(--mono);
		font-size: 0.65rem;
		color: var(--fg-dim);
		margin: 0;
	}
</style>
